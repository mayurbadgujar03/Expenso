generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NEON_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  username  String     @unique
  fullname  String
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Purchase  Purchase[]
  Item      Item[]
}

model Purchase {
  id           Int      @id @default(autoincrement())
  createdBy    User     @relation(fields: [createdById], references: [id])
  createdById  Int
  item         Item     @relation(fields: [itemId], references: [id])
  itemId       Int
  quantity     Int
  total_price  Float
  currentPrice Float
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Item {
  id             Int      @id @default(autoincrement())
  createdBy      User     @relation(fields: [createdById], references: [id])
  createdById    Int
  name           String
  price          Float
  imageUrl       String   @default("https://placehold.co/600x400")
  imageLocalPath String   @default("")
  deleted        Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  purchases Purchase[]

  @@unique([createdById, name])
}
